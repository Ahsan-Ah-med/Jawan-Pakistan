<div>
  <div>
    <div class="custom-big-image-with-text-main">
      <div class="custom-big-image-with-text-image"><img src="{{ section.settings.img | img_url: 'master' }}"></div>
      <div class="custom-big-image-with-text-heading-box">
        <h2 class="custom-big-image-with-text-heading">{{ section.settings.heading }}</h2>
        <div class="custom-big-image-with-text-paragraph">{{ section.settings.paragraph }}</div>
      </div>
    </div>
  </div>
</div>
<style>
  .custom-big-image-with-text-main{
         padding: {{  section.settings.top_padding }}px {{ section.settings.right_padding }}px {{ section.settings.bottom_padding }}px {{ section.settings.left_padding }}px;
         max-width: {{ section.settings.page_size }}px;
         width: 100%;
         margin: 0 auto;
  }
  .custom-big-image-with-text-heading p{
         font-size: {{ section.settings.heading_font_size }}px;
         font-weight: {{ section.settings.heading_font_weight }};
         color: {{ section.settings.heading_color }};
         margin: 0px 0px 60px 0px;
         line-height: 60px;
         letter-spacing: 0px;
         text-align: center;
       }
      .custom-big-image-with-text-heading p strong{
         color: {{ section.settings.heading_color_hover }};
       }
  .custom-big-image-with-text-paragraph p{
         font-size: {{ section.settings.paragraph_font_size }}px;
         font-weight: {{ section.settings.paragraph_font_weight }};
         color: {{ section.settings.paragraph_color }};
         margin: 0;
         line-height: 30px;
         letter-spacing: 0px;
         text-align: center;
       }
   @media only screen and (max-width:900px){
       .custom-big-image-with-text-main{
         padding: {{ section.settings.top_padding_mobile }}px {{ section.settings.right_padding_mobile }}px {{ section.settings.bottom_padding_mobile }}px {{ section.settings.left_padding_mobile }}px;
       }
       .custom-big-image-with-text-heading p{
         font-size: {{ section.settings.fonderHeading }}px;
         line-height: 25px;
         margin: 0px 0px 20px 0px;
       }
     .custom-big-image-with-text-paragraph p{
         font-size: {{ section.settings.paragraph_font_size_mobile }}px;
         line-height: 18px;
     }
   }

  .cusrightToleft p strong {
    color: #fff;
    position: relative;
    padding: 0 7px;
  }
  .cusrightToleft p strong:after {
    background-position: right bottom !important;
    opacity: 1 !important;
  }
  .custom-big-image-with-text-heading p strong:after {
      content: '';
      position: absolute;
      width: 100%;
      height: 80%;
      top: 10px;
      left: 0px;
      z-index: -1;
      opacity: 0;
      transition: opacity 1s ease, background-position 1.5s ease;
      background: linear-gradient(to right,transparent 50%,#49946d 50%);
      background-size: 200% 100%;
      background-position: left bottom;
      transition: all .5s ease-out;
  }
</style>

<script>
    window.addEventListener('scroll', function() {
    var section = document.querySelector('.custom-big-image-with-text-main');
    var customImage = document.querySelector('.custom-big-image-with-text-heading');

    // Yahan pe aap class ka naam change kar sakte hain agar kuch aur naam rakhna hai to
    var classNameToAdd = 'cusrightToleft';

    if (section.getBoundingClientRect().top < window.innerHeight) {
      // Jab window scroll karke section ke top pe aa jaye, class add karenge
      customImage.classList.add(classNameToAdd);
    } else {
      // Agar window section ke top se bahar jaata hai, class hata denge
      customImage.classList.remove(classNameToAdd);
    }
  });
</script>
