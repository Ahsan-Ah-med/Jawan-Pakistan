<div class="{{ section.id }} custom_footer">
  <div class="custom_footer_cq">
    <div class="custom_footer_contain">
      {% for block in section.blocks %}
        {%- case block.type -%}
          {%- when 'menu' -%}
            <div class="custom_menu custom_menu_box{{ forloop.index }}">
              <div class="custom_menu_heading">
                <h4>{{ block.settings.menuheading }}</h4>
              </div>
              {%- if block.settings.menu != blank -%}
                <ul class="header-nav">
                  {%- for link in block.settings.menu.links -%}
                    <li>
                      <a href="{{ link.url }}" class="custom_anhor">
                        {{ link.title }}
                      </a>
                    </li>
                  {%- endfor -%}
                </ul>
              {%- endif -%}
            </div>
        {% endcase %}
      {% endfor %}

      <div class="custom_footer_contact">
        <div class="contact_heading">
          <h4>{{ section.settings.contheading }}</h4>
        </div>
        {% for block in section.blocks %}
          {%- case block.type -%}
            {%- when 'contact' -%}
              <div class="contact_custom_contain">
                {% if block.settings.contact_image != blank %}
                  <div class="contact_custom_contain_image">
                    <img src="{{ block.settings.contact_image | img_url: 'master' }}">
                  </div>
                {% endif %}
                {% if block.settings.contact_image != blank %}
                  <div class="contact_custom_contain_text">
                    <h2>{{ block.settings.contact_text }}</h2>
                  </div>
                {% endif %}
              </div>
          {% endcase %}
        {% endfor %}
      </div>
      <div class="custom_footer_news_latter">
        <div class="newsheading">
          <h4>{{ section.settings.newsheading }}</h4>
        </div>
        <div class="news_input">
          {%- form 'customer', id: 'ContactFooter', class: 'footer__newsletter newsletter-form' -%}
            <input type="hidden" name="contact[tags]" value="newsletter">
            <div class="newsletter-form__field-wrapper">
              <div class="field">
                <input
                  id="NewsletterForm--{{ section.id }}"
                  type="email"
                  name="contact[email]"
                  class="field__input"
                  value="{{ form.email }}"
                  aria-required="true"
                  autocorrect="off"
                  autocapitalize="off"
                  autocomplete="email"
                  {% if form.errors %}
                    autofocus
                    aria-invalid="true"
                    aria-describedby="ContactFooter-error"
                  {% elsif form.posted_successfully? %}
                    aria-describedby="ContactFooter-success"
                  {% endif %}
                  placeholder="Votre email"
                  required
                >

                <button
                  type="submit"
                  class="newsletter-form__button field__button"
                  name="commit"
                  id="Subscribe"
                  aria-label="{{ 'newsletter.button_label' | t }}"
                >
                  S’INSCRIRE
                  {% comment %}
                    {% render 'icon-arrow' %}
                  {% endcomment %}
                </button>
              </div>
              {%- if form.errors -%}
                <small class="newsletter-form__message form__message" id="ContactFooter-error">
                  {%- render 'icon-error' -%}
                  {{- form.errors.translated_fields.email | capitalize }}
                  {{ form.errors.messages.email -}}
                </small>
              {%- endif -%}
            </div>
            {%- if form.posted_successfully? -%}
              <h3
                class="newsletter-form__message newsletter-form__message--success form__message"
                id="ContactFooter-success"
                tabindex="-1"
                autofocus
              >
                {% render 'icon-success' -%}
                {{- 'newsletter.success' | t }}
              </h3>
            {%- endif -%}
          {%- endform -%}
        </div>
        <div class="custom_footer_social_icon">
          {% for block in section.blocks %}
            {%- case block.type -%}
              {%- when 'icon' -%}
                {% if block.settings.icon_image != blank %}
                  <div class="custom_footer_social_icon_image">
                    <img src="{{ block.settings.icon_image | img_url: 'master' }}">
                  </div>
                {% endif %}
            {% endcase %}
          {% endfor %}
        </div>
      </div>
      <div class="custom_footer_bottom_text">
        <div class="custom_footer_text_div">
          {% for block in section.blocks %}
            {%- case block.type -%}
              {%- when 'text' -%}
                <h3>{{ block.settings.bottom_text }}</h3>
            {% endcase %}
          {% endfor %}
        </div>
        <div class="custom_payment_icon">
          {% for block in section.blocks %}
            {%- case block.type -%}
              {%- when 'payment' -%}
                <div class="custom_footer_payment_icon">
                  <img src="{{ block.settings.pay_icon | img_url: 'master' }}">
                </div>
            {% endcase %}
          {% endfor %}
        </div>
        <div class="copyright_text">
          <h4>
            {{ section.settings.copyright_text }}
          </h4>
        </div>
      </div>
    </div>
  </div>
</div>

