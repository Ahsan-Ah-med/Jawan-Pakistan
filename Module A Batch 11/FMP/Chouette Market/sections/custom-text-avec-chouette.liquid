<div>
  <div class="custom_avec_container">
    <div class="custom-text-avec-chouette-main">
      {% if section.settings.moving_image_left != blank %}
        <div class="moving_image_left">
          <img src="{{ section.settings.moving_image_left | img_url: 'master' }}">
        </div>
      {% endif %}
      <div class="moving_image_right">
        {% if section.settings.moving_image_right != blank %}
          <img src="{{ section.settings.moving_image_right | img_url: 'master' }}">
        {% endif %}
      </div>
      <div class="custom-text-avec-chouette-heading">{{ section.settings.heading }}</div>
      <div class="custom-text-avec-chouette-paragraph">{{ section.settings.paragraph }}</div>
      <div class="custom-text-avec-chouette-list-item">{{ section.settings.list_item }}</div>
    </div>
  </div>
</div>
<style>
   .custom-text-avec-chouette-main{
         padding: {{  section.settings.top_padding }}px {{ section.settings.right_padding }}px {{ section.settings.bottom_padding }}px {{ section.settings.left_padding }}px;
         max-width: {{ section.settings.page_size }}px;
         width: 100%;
         margin: 0 auto;

  }
  .custom-text-avec-chouette-heading p{
         font-size: {{ section.settings.heading_font_size }}px;
         font-weight: {{ section.settings.heading_font_weight }};
         color: {{ section.settings.heading_color }};
         margin: 0px;
         line-height: 60px;
         letter-spacing: 0px;
         text-align: center;
       }
      .custom-text-avec-chouette-heading p strong{
         color: {{ section.settings.heading_color_hover }};
       }
  .custom-text-avec-chouette-paragraph p{
         font-size: {{ section.settings.paragraph_font_size }}px;
         font-weight: {{ section.settings.paragraph_font_weight }};
         color: {{ section.settings.paragraph_color }};
         margin: 0;
         line-height: 30px;
         letter-spacing: 0px;
         text-align: center;
        max-width: 670px;
        padding: 60px 0px;
        margin: 0 auto;
       }
  .custom-text-avec-chouette-paragraph p strong{
         color: {{ section.settings.paragraph_color_hover }};
       }
    .custom-text-avec-chouette-list-item li{
         font-size: {{ section.settings.list_font_size }}px;
         font-weight: {{ section.settings.list_font_weight }};
         color: {{ section.settings.list_color }};
         margin: 0;
         line-height: 30px;
         letter-spacing: 0px;
         text-align: left;
       }
         .custom-text-avec-chouette-list-item li:first-child{
            padding-bottom: 30px;
         }
        .custom-text-avec-chouette-list-item ul{
          margin: 0;
          padding: 0;
        }
         @media only screen and (max-width:900px){
       .custom-text-avec-chouette-main{
         padding: {{ section.settings.top_padding_mobile }}px {{ section.settings.right_padding_mobile }}px {{ section.settings.bottom_padding_mobile }}px {{ section.settings.left_padding_mobile }}px;
       }
       .custom-text-avec-chouette-heading p{
         font-size: {{ section.settings.fonderHeading }}px;
         line-height: 25px;
         margin: 0px;
       }
     .custom-text-avec-chouette-paragraph p{
         font-size: {{ section.settings.paragraph_font_size_mobile }}px;
         line-height: 18px;
         padding: 30px 0px;
     }
    .custom-text-avec-chouette-list-item li{
        font-size: {{ section.settings.list_font_size_mobile }}px;
         line-height: 18px;
        }
      .custom-text-avec-chouette-list-item li:first-child{
            padding-bottom: 15px;
         }
   }

  .avecrightToleft p strong {
    color: #fff;
    position: relative;
    padding: 0 5px;
  }
  .avecrightToleft p strong:after {
    background-position: right bottom !important;
    opacity: 1 !important;
  }
  .custom-text-avec-chouette-heading p strong:after {
      content: '';
      position: absolute;
      width: 100%;
      height: 80%;
      top: 10px;
      left: 0px;
      z-index: -1;
      opacity: 0;
      transition: opacity 1s ease, background-position 1.5s ease;
      background: linear-gradient(to right,transparent 50%,#49946d 50%);
      background-size: 200% 100%;
      background-position: left bottom;
      transition: all .5s ease-out;
  }
      .moving_image_left, .moving_image_right{
        max-width: 300px;
      }
    .moving_image_left{
      position: absolute;
      left: -22%;
      transition: 1s;
      z-index: -1;
    }
    .moving_image_right{
      position: absolute;
      right: -22%;
      transition: 1s;
      z-index: -1;
    }
    .avecimageleft{
      left: 0;
    }
    .avecimageright{
      right: 0;
    }
  .custom_avec_container{
    max-width:1500px;
    width: 100%;
    margin: 0 auto;
    position: relative;
    overflow: hidden;
  }

  @media only screen and (max-width:767px){
      .moving_image_left{
        display: none;
      }
      .moving_image_right{
        display: none;
      }
  }

   @media only screen and (max-width:600px){
    {% if section.settings.hideSectionOnMobile %}
    .custom_avec_container{
     display: none;
    }
    {% endif %}
  }
</style>

<script>
    window.addEventListener('scroll', function() {
    var section = document.querySelector('.custom-text-avec-chouette-main');
    var customImage = document.querySelector('.custom-text-avec-chouette-heading');

    // Yahan pe aap class ka naam change kar sakte hain agar kuch aur naam rakhna hai to
    var classNameToAdd = 'avecrightToleft';

    if (section.getBoundingClientRect().top < window.innerHeight) {
      // Jab window scroll karke section ke top pe aa jaye, class add karenge
      customImage.classList.add(classNameToAdd);
    } else {
      // Agar window section ke top se bahar jaata hai, class hata denge
      customImage.classList.remove(classNameToAdd);
    }
  });

    window.addEventListener('scroll', function() {
    var section = document.querySelector('.custom-text-avec-chouette-main');
    var customImage = document.querySelector('.moving_image_left');

    // Yahan pe aap class ka naam change kar sakte hain agar kuch aur naam rakhna hai to
    var classNameToAdd = 'avecimageleft';

    if (section.getBoundingClientRect().top < window.innerHeight) {
      // Jab window scroll karke section ke top pe aa jaye, class add karenge
      customImage.classList.add(classNameToAdd);
    } else {
      // Agar window section ke top se bahar jaata hai, class hata denge
      customImage.classList.remove(classNameToAdd);
    }
  });

    window.addEventListener('scroll', function() {
    var section = document.querySelector('.custom-text-avec-chouette-main');
    var customImage = document.querySelector('.moving_image_right');

    // Yahan pe aap class ka naam change kar sakte hain agar kuch aur naam rakhna hai to
    var classNameToAdd = 'avecimageright';

    if (section.getBoundingClientRect().top < window.innerHeight) {
      // Jab window scroll karke section ke top pe aa jaye, class add karenge
      customImage.classList.add(classNameToAdd);
    } else {
      // Agar window section ke top se bahar jaata hai, class hata denge
      customImage.classList.remove(classNameToAdd);
    }
  });
</script>
