{% if section.settings.banner %}
  <div>
    <div>
      <div class="custom-page-banner-main">
        <div class="custom-page-banner-text">
          {% if page.metafields.custom.banner_title_ != blank %}
            <div class="custom-page-banner-heading">
              {{- page.metafields.custom.banner_title_ | metafield_tag -}}
            </div>
          {% elsif section.settings.heading != blank %}
            <div class="custom-page-banner-heading">{{ section.settings.heading }}</div>
          {% endif %}
          {% if page.metafields.custom.banner_description != blank %}
            <div class="custom-page-banner-description">
              {{ page.metafields.custom.banner_description }}
            </div>
          {% elsif section.settings.description != blank %}
            <div class="custom-page-banner-description">{{ section.settings.description }}</div>
          {% endif %}
          <div class="custom-page-banner-button">
            <a href="{{ section.settings.button_url }}">{{ section.settings.button }}</a>
          </div>
        </div>
        {% if page.metafields.custom.banner_image != blank %}
          <div class="custom-page-banner-image">
            <img src="{{ page.metafields.custom.banner_image | img_url: 'master' }}">
          </div>
        {% elsif section.settings.img != blank %}
          <div class="custom-page-banner-image">
            <img src="{{ section.settings.img | img_url: 'master' }}">
          </div>
        {% endif %}
      </div>
    </div>
  </div>
  <style>
                      .custom-page-banner-main{
        {% if template.suffix == "contact" %}
                         padding-bottom: calc(100% / (1440 / 250));
          {% else %}
                         padding-bottom: calc(100% / (1440 / 499));
        {% endif %}
                         position: relative;
          z-index: 0;
                      }
                      @media screen and (max-width: 1599px) {
                         .custom-page-banner-main{
                          {% if template.suffix == "contact" %}
                         padding-bottom: calc(100% / (1440 / 250));
          {% else %}
                         padding-bottom: calc(100% / (1440 / 499));
        {% endif %}
                         position: relative;
                         }
                        .custom-page-banner-image img{
                            display: none;
                        }
                         {% if page.metafields.custom.banner_image != blank %}
                         .custom-page-banner-image{
                           background-image: url({{ page.metafields.custom.banner_image | img_url: 'master' }});
                           background-repeat: no-repeat;
                           background-size: cover;
                           background-position: center;
                         }
                           {% elsif section.settings.img != blank %}
                           .custom-page-banner-image{
                           background-image: url({{ section.settings.img | img_url: 'master' }});
                           background-repeat: no-repeat;
                           background-size: cover;
                           background-position: center;
                         }
                             {% else %}
                           .custom-page-banner-image{
                           background-color: #000;

                         }
                           {% endif %}
                       }

                      .custom-page-banner-text{
                          padding:{{ section.settings.padding_top_bottom }}px {{ section.settings.padding_left_right }}px;
                        position: absolute;
                        left: 50%;
                        top: 50%;
                        flex-wrap: wrap;
                        justify-content: center;
                        align-items: center;
                        width: 100%;
                        z-index: 2;
                        display: flex;
                        transform: translate(-50%, -50%);
                        max-width: {{ section.settings.text_max_width }}px;
                        text-align: center;
                        margin: 0px auto;
                      }
                      .custom-page-banner-heading{
                        font-size: {{ section.settings.heading_font_size }}px;
                            font-weight: {{ section.settings.heading_font_weight }};
                            color: {{ section.settings.heading_color }};
                            margin: 0;
                            padding: 0;
                           margin-bottom: 20px;
                        line-height: normal;
                      }
                   .custom-page-banner-heading p strong{
                            font-size: {{ section.settings.heading_font_size }}px;
                            font-weight: {{ section.settings.heading_font_weight }};
                            color: {{ section.settings.heading_color }};
                            position: relative;
                            padding: 2px 4px;
                   }
                .custom-page-banner-button a p{
                  font-size: 20px;
                  font-weight: 500;
                  color:#fff;
                  padding: 10px 40px;
                 border-radius: 12px;
                 margin-top: 20px;
                  background-color: #49946D;
                     position:relative;

                }
                 .custom-page-banner-button a p:after{
                     content: "";
                     width: 100%;
                     height: 100%;
                     position: absolute;
                     border: 1px solid #fff;
                     background-color: transparent;
                     top: 5px;
                     left: 5px;
                     border-radius: 12px;
                     z-index: -1;
                }
               .custom-page-banner-button a p:hover {

                           background-color: #69B88F;
                      }
                 {% if section.settings.hover_line %}
                  .custom-page-banner-heading p strong:after{
                          content: "";
                          position: absolute;
                          left: 0;
                          bottom: 5px;
                          max-width: 100%;
                          width: 100%;
                          height: 10px;
                         background-color: #49946D;
                         z-index: -1;
                       }
                 {% else %}
                   .custom-page-banner-heading p strong:after{
                          content: "";
                          position: absolute;
                          left: 0;
                          bottom: 5px;
                          max-width: 100%;
                          width: 100%;
                         height: 64px;
                         background-color: #49946D;
                         z-index: -1;
                       }
                   {% endif %}

                      .custom-page-banner-description{
                         color: #fff;
                        font-size: 20px;
                        font-weight: 400;

                      }
                      .custom-page-banner-description p{
                         margin: 0;
                        line-height: 120%;
                        text-align: center;
                      }
                      .custom-page-banner-image{
                         position: absolute;
                        top: 0;
                        width: 100%;
                        height: -webkit-fill-available;
                        border-bottom: 1px solid #49946D;
               box-shadow: 0px 9px 12px rgba(0, 0, 0, 0.25);
                      }
                      .custom-page-banner-image img{
                        width: 100%;
                      }
                       .custom-page-banner-image:after{
                        content: "";
                        width: 100%;
                        height: 100%;
                        z-index: 1;
       {% if template.suffix == "contact" %}
                        opacity: 0;
         {% else %}
                        opacity: 1;
      {% endif %}
                        display: block;
                        position: absolute;
                        top: 0;

                      }
                       @media screen and (max-width: 990px) {
                         .custom-page-banner-heading{
                       font-size: 22px;
                      }
            .custom-page-banner-heading stong{
                       font-size: 22px;
                      }

             {% if section.settings.hover_line %}
                  .custom-page-banner-heading p strong:after{
                          height: 5px;
                       }
                 {% else %}
                   .custom-page-banner-heading p strong:after{
                     height: 22px;
                      }
                   {% endif %}

                          .custom-page-banner-heading p strong{
                            font-size: 22px;
                   }
                      .custom-page-banner-description{
                         font-size: 12px;
                      }
                         .custom-page-banner-text{
                          padding:20px 20px;
                      }
                       }
                      @media screen and (max-width: 767px) {
                       .custom-page-banner-description{
                        display: none;
                      }
                      .custom-page-banner-button {
                      display: none;
                     }
                      }
                      @media screen and (max-width: 400px) {
                         .custom-page-banner-heading{
                       font-size: 18px;
                           margin-bottom: 0px;
                      }
                      .custom-page-banner-description{
                         font-size: 9px;
                      }
                       }
                     .custom-page-banner-image img{
                            display: none;
                        }
                       @media screen and (min-width: 1600px) {
                         .custom-page-banner-main{
                           padding-bottom: calc(60% / (1319 / 474));
                           position: relative;
                         }
                        .custom-page-banner-image img{
                            display: none;
                        }
                         {% if page.metafields.custom.banner_image != blank %}
                         .custom-page-banner-image{
                           background-image: url({{ page.metafields.custom.banner_image | img_url: 'master' }});
                           background-repeat: no-repeat;
                           background-size: cover;
                           background-position: center;
                         }
                           {% elsif section.settings.img != blank %}
                           .custom-page-banner-image{
                           background-image: url({{ section.settings.img | img_url: 'master' }});
                           background-repeat: no-repeat;
                           background-size: cover;
                           background-position: center;
                         }
                             {% else %}
                           .custom-page-banner-image{
                           background-color: #000;

                         }
                           {% endif %}
                       }

                       {% if page.metafields.custom.banner_image == blank and section.settings.img == blank %}
                         .custom-page-banner-main {
                            background-color: #000;
                            padding: 0 !important;
                        }
                    .custom-page-banner-text {
                      position: relative;
                      left: auto;
                      top: auto;
                      transform: inherit;
                    }
                         {% endif %}

       @media only screen and (max-width:600px){
      {% if section.settings.hideSectionOnMobile %}
      .custom-page-banner-main{
       display: none !important;
      }
      {% endif %}

    }
  </style>
{% endif %}
{% schema %}
{
  "name": "Page Banner",
  "settings": [
    {
        "type": "checkbox",
        "id": "hideSectionOnMobile",
        "label": "Hide section",
        "info": "hide section on all mobile screens",
        "default": true
    },
    {
      "type": "checkbox",
      "id": "banner",
      "label": "Background Image Bannner",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "hover_line",
      "label": "Border Line",
      "default": true
    },

    {
      "type": "richtext",
      "id": "heading",
      "label": "Heading"
    },
    {
      "type": "richtext",
      "id": "description",
      "label": "Description"
    },
    {
      "type": "image_picker",
      "id": "img",
      "label": "Image"
    },
    {
      "type": "number",
      "id": "text_max_width",
      "label": "Text Max Width",
      "default": 1500
    },

    {
      "type": "header",
      "content": "Section Desktop Settings"
    },
    {
      "type": "range",
      "id": "padding_top_bottom",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Top Bottom Padding",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_left_right",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Right Left Padding",
      "default": 40
    },
      {
      "type": "header",
      "content": "Mobile Responsive Settings"
    },
     {
      "type": "range",
      "id": "padding_top_bottom_mobile",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Top Bottom Padding On Mobile",
      "default": 10
    },
    {
      "type": "range",
      "id": "padding_left_right_mobile",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Section Right Left Padding On Mobile",
      "default": 20
    },
      {
      "type": "header",
      "content": "Heading Settings"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 1,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Heading Font Size",
      "default": 14
    },
    {
      "type": "range",
      "id": "heading_font_weight",
      "min": 100,
      "max": 900,
      "step": 100,
      "label": "Heading Font Weight",
      "default": 400
    },
    {
          "type": "color",
          "id": "heading_color",
          "label": "Heading Color",
          "default": "#197BBD"
     },
    {
      "type": "richtext",
      "id": "button",
      "label": "Button Text"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button link",
      "info": "If you want to link below section you can type #quote"
    }

  ],
   "presets": [
  {
    "name": "Custom Page Banner"
  }
]
}
{% endschema %}
