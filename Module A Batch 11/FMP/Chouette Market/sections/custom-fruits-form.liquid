    }
    .custom_fruits_form_sub_heading h2 p{
      font-size: {{section.settings.sub_heading_fz_mb}}px;
      line-height: 1;
    }
    .custom_fruits_form_sub_heading h2{
      margin-bottom: {{section.settings.sub_heading_bottom_spacing_mb}}px;
    }
    .custom_fruits_form_sub_heading h3 p{
      font-size: {{section.settings.sub_para_fz_mb}}px;
      line-height: 1;
    }
    .custom_fruits_form_sub_heading h3{
      margin-bottom: {{section.settings.sub_para_bottom_spacing_mb}}px;
    }
    .custom_section_back_button a img {
