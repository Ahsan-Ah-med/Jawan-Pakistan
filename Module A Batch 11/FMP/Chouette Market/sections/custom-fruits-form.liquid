    align-items: center;
    justify-content: center;
  }
  .custom_section_back_button a img{
    width: 25px;
    height: 25px;
  }
  .custom_section_back_button a p{
    color: #000;
    font-family: Helvetica;
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    letter-spacing: -0.6px;
    text-decoration-line: underline;
    margin-left: 12px;
  }
  .custom_fruits_form_sub_heading{
    position: relative;
  }
  .custom_section_back_button{
    position: absolute;
    top: 0;
    left: 0;
  }

