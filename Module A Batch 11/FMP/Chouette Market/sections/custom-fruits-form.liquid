    box-shadow: 3px 3px 0 0px #fff, 4px 0px 0 0px #064E3B, 3px 4px 0 0px #064E3B, 4px 4px 0 0px #064E3B;
    transform: translateX(2px);
    transform: translate(2px, 2px);
  }
  .custom_popup_dropdown1 h2 p, .custom_popup_dropdown2 h2 p{
