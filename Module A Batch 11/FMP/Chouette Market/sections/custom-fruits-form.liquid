<div class="{{ section.id }}">
  <div class="custom_fruits_form">
    <div class="custom_fruits_form_container">
      <div class="custom_fruits_form_main_heading">
        <h2>{{ section.settings.heading }}</h2>
      </div>
      <div class="custom_fruits_form_sub_heading">
        <h2>{{ section.settings.sub_heading }}</h2>
        <h3>{{ section.settings.sub_para }}</h3>
        <div class="custom_section_back_button">
          <a href="{{ section.settings.section_back_link }}">
            <img src="https://cdn.shopify.com/s/files/1/0789/9778/2834/files/Arrow_back.svg?v=1690809320">
            {{ section.settings.section_back_text }}
          </a>
        </div>
      </div>
      <div class="custom_fruits_form_contain">
        {% form 'contact' %}
          {{ form.errors | default_errors }}

          <select id="main_dropDown1" class="hidden" name="contact[Nom_de_l'entreprises]">
            <option selected disabled>Select Options</option>
          </select>
          <div class="formDropBoxDropDown1">
            <div class="custom_main_dropdown1">
              <h2>{{ section.settings.main_drop_text }}</h2>
            </div>
            <div class="custom_popup_dropdown1" data-visible="0">
              <h2>
                {{ section.settings.dropdown_popup }}
              </h2>
            </div>
          </div>
          <select id="main_dropDown2" class="hidden" name="contact[Votre_nom_prénom]">
            <option selected disabled>Select Options</option>
          </select>
          <div class="formDropBoxDropDown2">
            <div class="custom_main_dropdown2">
              <h2>{{ section.settings.main_drop_text1 }}</h2>
            </div>
            <div class="custom_popup_dropdown2" data-visible="0">
              <h2>
                {{ section.settings.dropdown_popup1 }}
              </h2>
            </div>
          </div>

          <div class="email">
            <input type="email" name="contact[email]" id="email" placeholder="Votre email">
          </div>

          <div class="phone">
            <input type="tel" name="contact[phone]" id="phone" placeholder="Téléphone">
          </div>

          <div class="submit">
            <input type="submit" value="TERMINER">
          </div>
        {% endform %}
      </div>
    </div>
  </div>
</div>

<style>
