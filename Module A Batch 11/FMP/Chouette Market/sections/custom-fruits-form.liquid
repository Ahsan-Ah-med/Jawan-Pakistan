      height: 20px;
    }
    .custom_section_back_button a p{
      font-size: 14px;
    }
  }
  @media only screen and (max-width:600px){
    .custom_section_back_button{
      display: none;
    }
  }
</style>

<script>
  const formDrop = document.querySelectorAll('.formDropBoxDropDown1 .custom_main_dropdown1');

    formDrop.forEach((i) => {
      i.addEventListener('click', () => {
        formDrop.forEach((btn) => {
          btn.nextElementSibling.style.opacity = "0";
          // btn.nextElementSibling.dataset.visible = '0'
        });

        if (i.nextElementSibling.dataset.visible === "0") {
          i.nextElementSibling.style.opacity = "1";
          i.nextElementSibling.style.zIndex = "3";
          i.nextElementSibling.dataset.visible = '1'
        } else {
          i.nextElementSibling.style.opacity = "0";
          i.nextElementSibling.style.zIndex = "-1";
          i.nextElementSibling.dataset.visible = '0'
        }
      });
    });

  const formDrop2 = document.querySelectorAll('.formDropBoxDropDown2 .custom_main_dropdown2');

    formDrop2.forEach((i) => {
      i.addEventListener('click', () => {
        formDrop2.forEach((btn) => {
          btn.nextElementSibling.style.opacity = "0";
          // btn.nextElementSibling.dataset.visible = '0'
        });

        if (i.nextElementSibling.dataset.visible === "0") {
          i.nextElementSibling.style.opacity = "1";
          i.nextElementSibling.style.zIndex = "3";
          i.nextElementSibling.dataset.visible = '1'
        } else {
          i.nextElementSibling.style.opacity = "0";
          i.nextElementSibling.style.zIndex = "-1";
          i.nextElementSibling.dataset.visible = '0'
        }
      });
    });
</script>
