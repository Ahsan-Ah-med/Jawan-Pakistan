<div class="custom_anno">
  <div class="custom_cq_anno custom-width">
    <div class="anno_container">
      <div class="custom_anno_tel">
        <a href="{{ section.settings.tele_link }}">
          {% if section.settings.cont_img != blank %}
            <div class="contact_icon">
              <img src="{{ section.settings.cont_img | img_url: 'master' }}">
            </div>
          {% endif %}
          <div class="contact_tele">
            <h3>{{ section.settings.tele_no }}</h3>
          </div>
        </a>
      </div>
      <div class="custom_anno_slider" dir="rtl">
        {% for block in section.blocks %}
          {%- case block.type -%}
            {%- when 'Text' -%}
              <div class="anno_text_box">
                <h3>{{ block.settings.text }}</h3>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
      <div class="custom_anno_icon">
        {% for block in section.blocks %}
          {%- case block.type -%}
            {%- when 'Icon' -%}
              <div class="anno_icon">
                <a href="{{ block.settings.icon_link }}">
                  {% if block.settings.icon_img != blank %}
                    <img src="{{ block.settings.icon_img | img_url: 'master' }}">
                  {% endif %}
                </a>
              </div>
          {% endcase %}
        {% endfor %}
      </div>
    </div>
    <div class="custom_anno_mobile_slider">
      <div class="custom_anno_slider_2" dir="rtl">
        <div class="custom_anno_tel">
          <a href="{{ section.settings.tele_link }}">
            {% if section.settings.cont_img != blank %}
              <div class="contact_icon">
                <img src="{{ section.settings.cont_img | img_url: 'master' }}">
              </div>
            {% endif %}
            <div class="contact_tele">
              <h3>{{ section.settings.tele_no }}</h3>
            </div>
          </a>
        </div>
        {% for block in section.blocks %}
          {%- case block.type -%}
            {%- when 'Text' -%}
              <div class="anno_text_box">
                <h3>{{ block.settings.text }}</h3>
              </div>
          {% endcase %}
        {% endfor %}
        <div class="custom_mobile_social_icon">
          {% for block in section.blocks %}
            {%- case block.type -%}
              {%- when 'Icon' -%}
                <div class="anno_icon">
                  <a href="{{ block.settings.icon_link }}">
                    {% if block.settings.icon_img != blank %}
                      <img src="{{ block.settings.icon_img | img_url: 'master' }}">
                    {% endif %}
                  </a>
                </div>
            {% endcase %}
          {% endfor %}
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .custom_anno{
    width:100%;
    background-color: {{ section.settings.back_color }};
    {% if template == 'product' %}
      display: none;
    {% endif %}
  }
  .custom_cq_anno{
    padding: {{ section.settings.padding_tb }}px {{ section.settings.padding_lr }}px;
    width: 100%;
    margin: 0 auto;
  }
  .anno_container{
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .custom_anno_tel{
    width: 20%;
  }
  .custom_anno_slider{
    width: 70%;
  }
  .custom_anno_icon{
    width: 20%;
    display: flex;
    align-items: center;
    justify-content: flex-end;
  }
  .custom_anno_tel a{
    display: flex;
    align-items: center;
  }
  .contact_icon{
    width: 16px;
    height: 16px;
    margin-right: 10px;
    display: flex;
  }
  .contact_icon img{
    width: 16px;
    height: 16px;
  }
  .contact_tele h3 p{
    color: {{ section.settings.cont_fc }};
    text-align: center;
    font-family: Poppins;
    font-size: {{ section.settings.cont_fz }}px;
    font-style: normal;
    font-weight: {{ section.settings.cont_fw }};
    line-height: 16.362px;
  }
  .anno_icon{
    width: 28px;
    height: 28px;
    margin-right: 14px;
  }
  .anno_icon:last-child{
    margin-right:0;
  }
  .anno_icon a img{
    width: 15px;
    height: 15px;
  }
  .anno_text_box h3 p{
    color: {{ section.settings.anno_fc }};
    text-align: center;
    font-family: Poppins;
    font-size: {{ section.settings.anno_fz }}px;
    font-style: normal;
    font-weight: {{ section.settings.anno_fw }};
    line-height: 16.362px;
  }
  .anno_text_box h3 p strong{
    color: {{ section.settings.anno_fc_bold }};
    font-size: {{ section.settings.anno_fz }}px;
    font-weight: {{ section.settings.anno_fw_bold }};
  }
  .custom_mobile_social_icon, .custom_anno_slider_2 .custom_anno_tel{
    display: flex !important;
    justify-content: center;
  }
  .custom_anno_mobile_slider{
    display: none;
  }
  .custom_anno_slider_2 .slick-track{
    display: flex;
    align-items: center;
  }
  .anno_icon a{
    border-radius: 50%;
    border: 1px solid {{ section.settings.icon_bor_color }};
    background: {{ section.settings.icon_bg_color }};
    padding: 0px 5px;
    width: 100%;
    display: flex;
    align-items: center;
    height: 100%;
  }
  .anno_icon a:hover{
    border: 1px solid {{ section.settings.icon_bor_color_hover }};
    background: {{ section.settings.icon_bg_color_hover }};
  }

  @media only screen and (max-width:990px){
    .anno_container{
      display: none;
    }
    .custom_anno_mobile_slider{
      display: block;
    }
    .anno_icon:last-child{
      margin-right: 14px;
    }
    .custom_anno_slider_2 .custom_anno_tel a{
      flex-direction: row-reverse;
    }
  }

  @media only screen and (max-width:767px){
    .custom_cq_anno{
      padding: {{ section.settings.padding_tb_mb }}px {{ section.settings.padding_lr_mb }}px;
    }
    .contact_tele h3 p{
      font-size: {{ section.settings.cont_fz_mb }}px;
    }
    .anno_text_box h3 p, .anno_text_box h3 p strong{
      font-size: {{ section.settings.anno_fz_mb }}px;
    }

  }
</style>

<script type="text/javascript">
  $(document).ready(function() {
  $('.custom_anno_slider').slick({
    slidesToShow: 1,
   slidesToScroll: 1,
   autoplay: {{ section.settings.slick_autoplay }},
    autoplaySpeed: 0,
     dots: {{ section.settings.slick_dots }},
     arrows: {{ section.settings.slick_arrow }},
       speed: {{ section.settings.slick_autoplay_speed | times: 1000 }},
         cssEase: 'linear',
         infinite: true,
      initialSlide: 1,
    centerPadding: '60px',
    centerMode: true,
    rtl: true,
    {% if section.settings.pre_arr != blank %}
    prevArrow:'<img src="{{ section.settings.pre_arr | img_url: 'master' }}"/>',
    {% endif %}
    {% if section.settings.next_arr != blank %}
    nextArrow:'<img src="{{ section.settings.next_arr | img_url: 'master' }}"/>',
    {% endif %}

    responsive: [
      {
       breakpoint: 1200,
       settings: {
         arrows: {{ section.settings.slick_arrow }},
         centerMode: false,
         centerPadding: '40px',
         slidesToShow: 2,
         slidesToScroll: 1,
       }
     },
     {
       breakpoint: 990,
       settings: {
         arrows: {{ section.settings.slick_arrow }},
         centerMode: false,
         centerPadding: '40px',
         slidesToShow: 2,
         slidesToScroll: 1,
       }
     },
     {
       breakpoint: 768,
       settings: {
         arrows: false,
         dots: false,
         centerMode: false,
         centerPadding: '40px',
         slidesToShow: 2,
         slidesToScroll: 1,
       }
     },
     {
       breakpoint: 600,
       settings: {
         arrows: false,
         centerMode: false,
         autoplay: false,
         centerPadding: '40px',
         slidesToShow: 1,
         slidesToScroll: 1,
       }
     }
   ]
  });
  });


  $(document).ready(function() {
  $('.custom_anno_slider_2').slick({
    slidesToShow: 4,
   slidesToScroll: 1,
   autoplay: {{ section.settings.slick_autoplay }},
    autoplaySpeed: 0,
     dots: {{ section.settings.slick_dots }},
     arrows: {{ section.settings.slick_arrow }},
       speed: {{ section.settings.slick_autoplay_speed | times: 1000 }},
         cssEase: 'linear',
         infinite: true,
      initialSlide: 1,
    centerPadding: '60px',
    centerMode: true,
    rtl: true,
    {% if section.settings.pre_arr != blank %}
    prevArrow:'<img src="{{ section.settings.pre_arr | img_url: 'master' }}"/>',
    {% endif %}
    {% if section.settings.next_arr != blank %}
    nextArrow:'<img src="{{ section.settings.next_arr | img_url: 'master' }}"/>',
    {% endif %}

    responsive: [
      {
       breakpoint: 1200,
       settings: {
         arrows: {{ section.settings.slick_arrow }},
         centerMode: false,
         centerPadding: '40px',
         slidesToShow: 3,
         slidesToScroll: 1,
       }
     },
     {
       breakpoint: 990,
       settings: {
         arrows: {{ section.settings.slick_arrow }},
         centerMode: false,
         centerPadding: '40px',
         slidesToShow: 2,
         slidesToScroll: 1,
       }
     },
     {
       breakpoint: 768,
       settings: {
         arrows: false,
         dots: false,
         centerMode: false,
         centerPadding: '40px',
         slidesToShow: 2,
         slidesToScroll: 1,
       }
     },
     {
       breakpoint: 600,
       settings: {
         arrows: false,
          autoplay: false,
         centerMode: false,
         centerPadding: '0px',
         slidesToShow: 1,
         slidesToScroll: 1,
       }
     }
   ]
  });
  });
</script>

